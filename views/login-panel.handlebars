<article>
    <h1 id="title">Welcome to Dr. Hub</h1>
</article>
<form id="login-form" method="post" action="api/login" class="login">
    <h1>Login Form</h1>
    <h1 id="reg-icon"><i class="fa fa-user fa-2x"></i></h1>

    <div class="form-group">
        <label for="login">Login Name</label>
        <input type="text" class="form-control" name="username" id="login" placeholder="Enter login name" required>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
    </div>

    <div>
        <button type="submit" class="btn btn-success btn-block">Login</button>        
    </div>

    <div>
        <a class="btn btn-warning btn-block" href="/account/register">Register</a>        
    </div>
</form>


